<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismNavigation.Views.LoginPage"
             Title="LoginPage">
  <VerticalStackLayout>
    <Label 
            Text="Click the button to absolute navigate to /MainPage"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

    <Button Text="Login" Command="{Binding LoginTapCommand}"/>
  </VerticalStackLayout>
</ContentPage>
